<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Pizza Input Form -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Pizza"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/pizzaNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pizza Name"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/pizzaPriceInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/pizzaImageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Image URL (optional)"
        android:inputType="textUri"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnAddPizza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Pizza"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@android:color/white"
        android:layout_marginBottom="24dp"/>

    <!-- Pizza List -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pizza Menu"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPizzas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your delivery location"
        android:layout_marginTop="17dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:textColor="#1A1A1A"
        android:fontFamily="@font/poppins_regular" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeColor="#E3F2FD"
        app:strokeWidth="1dp">

        <org.osmdroid.views.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp"/>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUseCurrentLocation"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:strokeColor="@color/primaryColor"
            android:backgroundTint="@color/primaryColor"
            android:textColor="@color/white"
            android:text="Use Current Location"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="@font/inter"
            app:cornerRadius="28dp"
            app:iconGravity="start" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirmLocation"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Confirm Location"
            app:strokeColor="@color/green"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:enabled="false"
            android:fontFamily="@font/inter"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/green" />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="@color/darker_white">

        <TextView
            android:id="@+id/tvSelectedLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap on map to select location"
            android:textSize="16sp"
            android:padding="16dp"
            android:gravity="center"
            android:textColor="#1A1A1A"
            android:fontFamily="@font/poppins_regular" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>